# Example terraform.tfvars file
# Copy this to terraform.tfvars and update with your values

aws_region  = "us-east-1"
environment = "dev"
project_name = "simple-saml-idp"

# SAML Identity Provider configuration
idp_entity_id = "https://saml-idp.example.com"
idp_base_url  = "https://your-api-gateway-id.execute-api.us-east-1.amazonaws.com/dev"

# Session duration for AWS Console (in seconds)
# Minimum: 900 (15 minutes)
# Maximum: 43200 (12 hours)
session_duration_seconds = 3600

# List of allowed AWS account IDs (leave empty to allow all accounts)
allowed_aws_accounts = [
  # "123456789012",
  # "098765432109"
]

# Enable CloudFront for serving login page
enable_cloudfront = true

# SAML provider name in target AWS accounts (must match the provider name)
saml_provider_name = "SimpleSAMLIdP"

# CORS origins allowed to call the API
# For production, restrict to your login page domain
# Example: ["https://login.example.com", "https://idp.example.com"]
allowed_cors_origins = ["*"]  # Warning: Allowing all origins is not recommended for production
